<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs121.ucsc.roomie.MainActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">

        <!--
        <Button
            android:id="@+id/profile"
            android:background="@drawable/tile_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:paddingTop="80dp"
            android:paddingBottom="80dp"
            android:layout_weight="1"
            android:text="@string/roommates"
            />
            -->

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/people"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/tile_buttons"
            android:layout_weight="1"/>

        <!--
        <Button
            android:id="@+id/todo"
            android:background="@drawable/tile_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:paddingTop="80dp"
            android:paddingBottom="80dp"
            android:layout_weight="1"
            android:text="@string/to_do"
            />
        -->

        <ImageButton
            android:id="@+id/todo"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/notepad"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/tile_buttons"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">

        <!--
        <Button
            android:id="@+id/messaging"
            android:background="@drawable/tile_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:paddingTop="80dp"
            android:paddingBottom="80dp"
            android:layout_weight="1"
            android:text="@string/messaging"
            />
        -->

        <ImageButton
            android:id="@+id/messaging"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/if_messages_216331"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/tile_buttons"
            android:layout_weight="1"/>

        <!--
        <Button
            android:id="@+id/billSplit"
            android:background="@drawable/tile_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:paddingTop="80dp"
            android:paddingBottom="80dp"
            android:layout_weight="1"
            android:text="@string/payment"
            />
            -->

        <ImageButton
            android:id="@+id/payment"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/money"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/tile_buttons"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>

    <!--
